				const scrollMultiplier = 2; // Scroll through 2 viewport heights to move 3 panels
				
				function updateSidewaysScroll() {
					const rect = sidewaysWrapper.getBoundingClientRect();
					const scrollProgress = -rect.top / (window.innerHeight * scrollMultiplier);
					const clampedProgress = Math.max(0, Math.min(1, scrollProgress));
					
					// Translate from 0% to -300% (4 panels, moving 3 full widths)
					const translateX = clampedProgress * 300;
					sidewaysContent.style.transform = `translateX(-${translateX}%)`;
				}
				
				let ticking = false;
				window.addEventListener('scroll', () => {
					if (!ticking) {
						requestAnimationFrame(() => {
							updateSidewaysScroll();
							ticking = false;
						});
						ticking = true;
					}
				});
				
				// Initial update
				updateSidewaysScroll();
			}

			// 3D mouse tracking for avant-garde elements
			document.querySelectorAll('.avant-garde').forEach((element) => {
				element.addEventListener('mousemove', (e) => {
					const rect = element.getBoundingClientRect();
					const x = e.clientX - rect.left;
					const y = e.clientY - rect.top;
					const centerX = rect.width / 2;
					const centerY = rect.height / 2;
					
					const rotateX = (y - centerY) / 10;
					const rotateY = (centerX - x) / 10;
					
					element.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateZ(20px)`;
				});
				
				element.addEventListener('mouseleave', () => {
					element.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg) translateZ(0px)';
				});
			});

			// Parallax effect for floating orbs
			window.addEventListener('scroll', () => {
				const scrolled = window.pageYOffset;
				document.querySelectorAll('.floating-orb').forEach((orb, index) => {
					const speed = 0.5 + (index * 0.1);
					orb.style.transform = `translateY(${scrolled * speed}px) rotate(${scrolled * 0.1}deg)`;
				});
