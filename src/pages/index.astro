						observer.unobserve(entry.target);
					}
				}
			}, { threshold: 0.2 });
			document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));

			// Fullpane-style sideways scrolling
			const sidewaysWrapper = document.getElementById('showcase');
			const sidewaysContent = document.getElementById('sideways-content');
			
			if (sidewaysWrapper && sidewaysContent) {
